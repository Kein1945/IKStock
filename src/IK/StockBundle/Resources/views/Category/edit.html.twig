{% extends 'IKStockBundle::fluid.html.twig' %}

{% block page_title %}
&laquo;{{entity}}&raquo; category / Stock
{% endblock page_title %}

{% block content %}

<ul class="breadcrumb">
    <li><a href="{{path('stock_dashboard')}}">Home</a> <span class="divider">/</span></li>
    <li><a href="{{path('stock_category')}}">Category list</a> <span class="divider">/</span></li>
    <li class="active"><a href="{{  path('stock_category_show', { 'id': entity.id }) }}">&laquo;{{entity}}&raquo;</a> <span class="divider">/</span></li>
    <li class="active">edit</li>
</ul>


<form action="{{ path('stock_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit btn-primary" class="btn">Edit</button>
    </div>
</form>
<div class="btn-toolbar">
    <form action="{{ path('stock_category_delete', { 'id': entity.id }) }}" method="post" style="display:inline-block;">
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn">Delete</button>
    </form>
</div>
{% endblock content %}
